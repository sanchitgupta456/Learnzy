<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WalletActivity"
    android:background="@color/colorPrimaryLight">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Current Balance"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The amount that you can withdraw to your bank account "
                    android:textColor="#323232"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="8dp"/>
                <TextView
                    android:id="@+id/current_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 0"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:typeface="serif"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:id="@+id/btn_withdraw_from_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_margin"
                    android:text="Withdraw"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount due"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The amount that will come to your wallet after the refund period of your courses is over"
                    android:textColor="#323232"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="8dp"/>
                <TextView
                    android:id="@+id/amount_due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 0"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:typeface="serif"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Your Payment Details :"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Account Number"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/textAccountNumber"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="IFSC Code"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/textIFSCCode"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Mobile Number"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/textMobileNumber"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="UPI Id"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/textUPIId"
                        android:layout_weight="40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_edit_payment_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_add_course"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_margin"
                    android:gravity="center_vertical"
                    android:text="Edit Your Payment Details"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_margin="10dp"
                    android:drawableEnd="@drawable/filled_next"
                    android:drawableTint="@color/colorPrimary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
