<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity"
    android:background="@drawable/background">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorAccent"
        android:id="@+id/loadingResetPassword"
        android:visibility="gone"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_password"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@id/loadingResetPassword"
        android:background="@drawable/text_view_login"
        android:padding="16dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLiteGrey"
        android:hint="@string/prompt_password"
        android:textSize="@dimen/text_margin"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_password_confirm"
        android:layout_below="@id/new_password"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/text_view_login"
        android:padding="16dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLiteGrey"
        android:hint="@string/confirm_password"
        android:textSize="@dimen/text_margin"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit_password"
        android:text="Reset Password"
        android:layout_below="@+id/new_password_confirm"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_rounded_rect"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_margin"/>

</RelativeLayout>