    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/text_margin">
            <TextView
                android:id="@+id/textEditCourseInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Edit Course Information"
                android:typeface="sans"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imgCourseImage"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:src="@drawable/background"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/course_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_margin="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCourseName"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/course_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_margin="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCourseDescription"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/course_duration"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_margin="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCourseDuration"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textIsOnline"
                    android:text="@string/this_course_is_online"
                    android:layout_marginHorizontal="12dp"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold|italic"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/btn_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:background="@drawable/btn_blue"
                    android:textColor="@color/colorWhite"
                    android:letterSpacing="0.1"
                    android:text="@string/view_course_location"
                    android:visibility="gone"/>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/course_fee"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_margin="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCourseFees"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toggleRegistrationAcceptance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:text="@string/accept_new_registrations"
                android:textSize="@dimen/text_margin"
                android:textStyle="bold"
                android:padding="5dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:text="@string/save"
        android:letterSpacing="0.3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/updateChange"
        android:clickable="true"
        android:focusable="true"/>
</RelativeLayout>
