<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textClassInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/class_information"
            android:typeface="sans"
            android:gravity="center_vertical" />
        <LinearLayout
            android:id="@+id/linearLayoutNextLecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textClassInfo"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="@dimen/text_margin"
                android:text="@string/next_lecture_on"
                android:typeface="normal"
                android:gravity="center_vertical"
                android:layout_weight="60"/>

            <EditText
                android:id="@+id/view_course_teacher_schedule_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:background="@drawable/text_view_login"
                android:gravity="center_vertical"
                android:inputType="datetime"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_margin"
                android:textStyle="italic"
                android:typeface="normal"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnScheduleClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutNextLecture"
            android:layout_margin="10dp"
            android:background="@drawable/btn_blue"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_margin"
            android:text="Schedule Class"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/icon_clock"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:drawableTint="@color/colorWhite"/>
        <LinearLayout
            android:id="@+id/linearLayoutMeetLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnScheduleClass"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="@dimen/text_margin"
                android:text="@string/class_meeting_link"
                android:typeface="normal"
                android:gravity="center_vertical"
                android:layout_weight="60"/>
            <EditText
                android:id="@+id/teacher_view_course_meet_link"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="@dimen/text_margin"
                android:typeface="normal"
                android:gravity="center_vertical"
                android:layout_weight="40"
                android:background="@drawable/text_view_login"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnUpdateLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutMeetLink"
            android:layout_margin="10dp"
            android:background="@drawable/btn_blue"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_margin"
            android:text="Update Link"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"/>

        <!-- course information here. to be added later. -->
        <LinearLayout
            android:id="@+id/linearLayoutCourseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnUpdateLink"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/imgCourseImage"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:src="@drawable/background"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/courseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/course_details"
                android:typeface="sans"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/teacher_view_course_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Rating - */5"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="italic"
                android:typeface="normal" />

            <TextView
                android:id="@+id/teacher_view_course_enrolled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="0 currently enrolled"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="italic"
                android:typeface="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="20sp"
                android:text="Course started on *"
                android:typeface="normal"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="20sp"
                android:text="0 % completed"
                android:typeface="normal"
                android:gravity="center_vertical" />

            <ToggleButton
                android:id="@+id/toggleRegistrationAcceptance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:background="@drawable/btn_multi_select"
                android:checked="true"
                android:elevation="100dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:textOff="@string/new_registrations_closed"
                android:textOn="@string/accepting_registrations_now"
                android:textSize="@dimen/text_margin"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
