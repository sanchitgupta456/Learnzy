<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textClassInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/class_information"
            android:typeface="sans"
            android:gravity="center_vertical" />
        <LinearLayout
            android:id="@+id/linearLayoutLecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textClassInfo"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="@dimen/text_margin"
                android:text="@string/next_lecture_on"
                android:typeface="normal"
                android:gravity="center_vertical"
                android:layout_weight="60"/>
            <TextView
                android:id="@+id/textDateTimeNextLecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="@dimen/text_margin"
                android:typeface="normal"
                android:gravity="center_vertical"
                android:layout_weight="40"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutMeetingLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutLecture"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="@dimen/text_margin"
                android:text="@string/class_meeting_link"
                android:typeface="normal"
                android:gravity="center_vertical"
                android:layout_weight="60"/>
            <TextView
                android:id="@+id/meetingLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textSize="@dimen/text_margin"
                android:typeface="normal"
                android:gravity="center_vertical"
                android:layout_weight="40"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textCourseResources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutMeetingLink"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/course_resources"
            android:typeface="sans"
            android:gravity="center_vertical" />

        <!-- This view should be vertical -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listCourseMaterial"
            android:orientation="vertical"
            android:layout_below="@id/textCourseResources"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:padding="10dp"
            android:background="@drawable/text_view_add_course"/>
    </RelativeLayout>

</ScrollView>