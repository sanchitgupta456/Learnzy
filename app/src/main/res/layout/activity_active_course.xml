<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textClassInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/class_information"
                android:typeface="sans"
                android:gravity="center_vertical" />
            <LinearLayout
                android:id="@+id/linearLayoutLecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textClassInfo"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_margin"
                    android:text="@string/next_lecture_on"
                    android:typeface="normal"
                    android:gravity="center_vertical"
                    android:layout_weight="60"/>
                <TextView
                    android:id="@+id/textDateTimeNextLecture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_margin"
                    android:typeface="normal"
                    android:gravity="center_vertical"
                    android:layout_weight="40"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutMeetingLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayoutLecture"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_margin"
                    android:text="@string/class_meeting_link"
                    android:typeface="normal"
                    android:gravity="center_vertical"
                    android:layout_weight="60"/>
                <TextView
                    android:id="@+id/meetingLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_margin"
                    android:typeface="normal"
                    android:gravity="center_vertical"
                    android:layout_weight="40"/>
            </LinearLayout>

            <!-- course information here. to be added later. -->


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
