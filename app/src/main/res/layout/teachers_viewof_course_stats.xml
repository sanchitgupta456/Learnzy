<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayoutCourseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <ImageView
            android:id="@+id/imgCourseImage"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/lightlogo2"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/course_details"
            android:typeface="sans"
            android:gravity="center" />

        <TextView
            android:id="@+id/teacher_view_course_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Rating - */5"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="italic"
            android:typeface="normal" />

        <TextView
            android:id="@+id/teacher_view_course_enrolled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="0 currently enrolled"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="italic"
            android:typeface="normal" />
        <TextView
            android:id="@+id/teacher_view_course_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="Course started on *"
            android:typeface="normal"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/teacher_view_course_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="0 % completed"
            android:typeface="normal"
            android:gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>