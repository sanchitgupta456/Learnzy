<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/MaterialTheme"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <ProgressBar
        android:id="@+id/loadingUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:foregroundGravity="center"
        android:indeterminateTint="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/loadingUserProfile">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/default_person_image"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/imgProfileImage" />

            <!--<view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/imgProfileImage"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"/>-->


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextUserName"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhoneNumber"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEmailId"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/loc_main">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="User Location"
                    android:textColor="@color/quantum_cyan900"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:id="@+id/view_location"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    app:drawableStartCompat="@drawable/icon_location"
                    app:drawableTint="@color/quantum_cyan900" />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:id="@+id/changeLocation"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/alter_loc"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="You have not set up your location services"
                    android:textColor="@color/quantum_grey600"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Started"
                    android:letterSpacing="0"
                    android:id="@+id/setupLocation"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/links">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Courses I teach"
                    android:id="@+id/courses_taught"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="15dp"
                    android:drawableEnd="@drawable/next"
                    android:paddingHorizontal="10dp"
                    style="@style/StrokeButtonStyle"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Enrolled Courses"
                    android:id="@+id/courses_enrolled"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="15dp"
                    android:paddingHorizontal="10dp"
                    android:drawableEnd="@drawable/next"
                    style="@style/StrokeButtonStyle"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:id="@+id/updateChange"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </ScrollView>

    
</RelativeLayout>