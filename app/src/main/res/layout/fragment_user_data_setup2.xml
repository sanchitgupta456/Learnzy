<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserDataSetupFragment2">

    <ProgressBar
        android:id="@+id/loadingSetUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tell_us_about_yourselves"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:id="@+id/textSetupTitle3"
        android:layout_below="@id/loadingSetUp2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textSetupTitle3"
        android:id="@+id/userNameHolder"
        android:inputType="text"
        android:layout_marginTop="36dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:hint="@string/enter_your_name"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/text_view_login"
        android:backgroundTint="@color/colorBlack"
        android:padding="10dp"
        android:autofillHints="@string/username"
        android:focusedByDefault="true"
        android:selectAllOnFocus="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/userNameHolder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:src="@drawable/default_person_image"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorBlack"
        android:id="@+id/profilePhoto"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePhoto"
        android:layout_marginTop="10dp"
        android:text="@string/add_an_optional_profile_photo"
        android:textColor="@color/colorBlack"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_margin"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/promptOptionalPhoto"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="@dimen/text_margin"
        android:layout_below="@id/promptOptionalPhoto"
        android:text="@string/your_name_and_photo_will_be_visible_to_your_teachers"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"/>

</RelativeLayout>