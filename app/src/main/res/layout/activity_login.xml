<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity"
    android:background="@drawable/background"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="64dp"
        android:autofillHints="Email"
        android:hint="@string/prompt_email"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorWhite"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_view_login"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@id/username"
        android:hint="@string/prompt_password"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorWhite"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:autofillHints="Password"
        android:background="@drawable/text_view_login"
        android:padding="12dp"/>
    <CheckBox
        android:id="@+id/checkRememberMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/remember_me"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_margin"
        android:layout_below="@id/password"
        android:buttonTint="@color/colorWhite"
        android:layout_marginHorizontal="24dp"
        android:paddingHorizontal="12dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/forgot_password"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/checkRememberMe"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_rounded_rect"
        android:enabled="true"
        android:text="@string/action_sign_in"
        android:layout_below="@id/textView3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@id/linearLayout2"
        android:layout_below="@id/login"
        android:layout_marginTop="48dp"
        android:gravity="center">
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="12dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/colorWhite"
            android:layout_weight="9"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:gravity="center"
            android:textSize="@dimen/text_margin"
            android:textColor="@color/colorWhite"
            android:layout_weight="2"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="12dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintHorizontal_bias="1.0"
            android:backgroundTint="@color/colorWhite"
            android:layout_weight="9"/>
    </LinearLayout>


    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorYellow"/>





    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout2"
        android:gravity="center">
        <!--
        <Button
            android:id="@+id/login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded_rect"
            android:enabled="false"
            android:text="@string/sign_in_with_google"
            android:textColor="@color/colorBlack"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="480dp" /> -->
        <ImageView
            android:id="@+id/googleSignIn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/google"
            android:layout_margin="12dp"
            android:contentDescription="@string/google_icon"/>

        <FrameLayout
            android:id="@+id/fbLoginFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/facebookSignIn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook"
                android:layout_margin="12dp"
                android:contentDescription="@string/facebook_icon"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/twitterSignIn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/twitter"
            android:layout_margin="12dp"
            android:contentDescription="@string/twitter_icon"/>
        <!--
        <Button
            android:id="@+id/login3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded_rect"
            android:enabled="false"
            android:text="@string/sign_in_with_facebook"
            android:textColor="@color/colorBlack"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="480dp"
            android:layout_marginTop="6dp"/> -->

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_above="@id/signUp"
        android:backgroundTint="@color/colorWhite"/>

    <Button
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_rounded_rect"
        android:text="@string/signup_text"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorBlack"/>



</RelativeLayout>