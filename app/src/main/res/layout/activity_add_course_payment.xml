<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCoursePayment"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="Please add your payment details."
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        />
    <EditText
        android:id="@+id/account_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="48dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:typeface="sans"
        android:textColorHint="#464646"
        android:hint="Enter Account Number"
        android:background="@drawable/text_view_add_course"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/ifsc_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:typeface="sans"
        android:textColorHint="#464646"
        android:hint="Enter IFSC Code"
        android:background="@drawable/text_view_add_course"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="phone"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:typeface="sans"
        android:textColorHint="#464646"
        android:hint="Enter Mobile Number"
        android:background="@drawable/text_view_add_course"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/upi_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:typeface="sans"
        android:textColorHint="#464646"
        android:hint="Enter UPI ID"
        android:background="@drawable/text_view_add_course"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btnSubmitPaymentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/btn_blue"
        android:textSize="@dimen/text_margin"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/submit"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"/>
</LinearLayout>