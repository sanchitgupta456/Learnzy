<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:id="@+id/loadingExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorPrimary"/>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        android:id="@+id/tabLayout"
        android:background="@color/colorPrimary"
        app:tabTextColor="@color/colorWhite"
        app:tabIndicatorHeight="5dp"
        app:tabIndicatorColor="@color/colorLiteGrey">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP FREE"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP RATED"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEAR YOU"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP ONLINE"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/filter_categories_list"
        android:layout_below="@id/tabLayout"
        android:layout_marginTop="12dp"/>

    <FrameLayout
        android:id="@+id/exploreFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/text_view_login"
        android:visibility="gone"
        android:layout_below="@id/filter_categories_list"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exploreList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/text_view_login"
        android:layout_above="@id/linearLayoutPageNumber"
        android:layout_below="@id/exploreFrame"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayoutPageNumber"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/prevPage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/filled_left"
            android:background="@color/transparent"
            android:tint="@color/colorPrimary"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            android:text="Page 1/5"
            android:gravity="center"
            android:textSize="@dimen/text_margin"
            android:textColor="@color/colorPrimary"/>
        <ImageButton
            android:id="@+id/nextPage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/filled_next"
            android:background="@color/transparent"
            android:tint="@color/colorPrimary"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</RelativeLayout>