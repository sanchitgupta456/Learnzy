                    android:layout_weight="50"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_margin"
                    android:text="@string/individual"/>

            </RadioGroup>



